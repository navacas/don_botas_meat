<h3 class="text-center mb-5">Lista de clientes</h3>
<button class="btn btn-secondary mb-3">Agregar cliente</button>
<table class="table">
  <thead>
    <tr>
      
      <th scope="col">Nombre</th>
      <th scope="col">Teléfono</th>
      <th scope="col">Colonia</th>
      <th scope="col">Calle</th>
      <th scope="col">N° de casa</th>
      <th scope="col">Referencia</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
    <tr>
      <td><%= client.nombre %></td>
      <td><%= client.telefono %></td>
      <td><%= client.colonia %></td>
      <td><%= client.calle %></td>
      <td><%= client.numero_casa %></td>
      <td><%= client.referencia %></td>
    </tr>
    <% end %>
  </tbody>
</table>
